package baitap2;

import java.util.Scanner;
import java.util.ArrayList;

public class bai4 {

    public static void main(String[] args) {
        Scanner non = new Scanner(System.in);
        System.out.print(" nhap thanh pho ban muon kiem tra :");
        String n= non.nextLine();
        ArrayList<String> nghia = new ArrayList<>();
        nghia.add("london");
        nghia.add("ha noi");
        nghia.add("da nang");
        nghia.add("ba ria");
        nghia.add("vung tau");
        ArrayList<String> thong = new ArrayList<>();
        thong.add("an giang");
        thong.add("ha noi");
        thong.add("da nang");
        thong.add("pa ri");
        thong.add("tu xuyen");
       
        if (nghia.contains(n)) {
            System.out.println("co o danh sach 1:");
             System.out.print("danh sach :");
            for (String num : nghia) {
                System.out.print(" " + num + " ");
            }
        }else if(thong.contains(n)) {
            System.out.println("co o danh sach 2:");
            System.out.print("danh sach :");
            for (String num : thong) {
                System.out.print(" " + num + " ");
            }
        }else{
            System.out.print("ko co trong danh sach nao");
        }
    }
}
