package baitap2;

import java.util.Scanner;
import java.util.ArrayList;
import java.util.*;
public class bai5 {
     public static void main(String[] args) {
        Scanner non = new Scanner(System.in);
        
         
        ArrayList<Integer> cha = new ArrayList<>();
        Random r = new Random();
        for (int i = 1; i <= 10; i++) {
            cha.add(r.nextInt(100)+1);
        }
        System.out.print(" danh sach ban dau :");
        System.out.println(cha);
        System.out.print(" vi tri muon xoa :");
        int n = non.nextInt();
        cha.remove(n);
        System.out.print(" danh sach sau khi xoa :");
        System.out.println(cha);
     }
}
