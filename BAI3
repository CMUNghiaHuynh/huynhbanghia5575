public class BAI5C {
    public static void main(String[] args) {
        Random ne = new Random();
        System.out.print("nhap n:");
        int n = ne.nextInt(80-3+1)+1;
        if(n%2==0){
         System.out.print("n = " + n + "la so chan");
        }else{
        System.out.print("n = " + n + "la so le");
        }
 }
}
